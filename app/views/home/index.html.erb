<%= image_tag "ruby.png", class: "col-12 top-image" %>

<div class="top-main">
  <div class="col-6 main-image">
    <h3>記事一覧</h3>
    <div id="article" class="col-12">
      <% @blogs.each do |blog| %>
        <%= link_to blog do %>
          <p>
            <%= blog.updated_at.strftime("%Y-%m-%d %H:%M:%S") %>
            &nbsp;&nbsp;&nbsp;
            <%= "#{blog.name}メソッド" %>
          </p>
        <% end %>
      <% end %>
    </div>
    <div class="article-link">
      <%= link_to "すべての記事を見る", blogs_path %>
    </div>
  </div>
  <div class="col-6 main-image">
    <h3>メソッド一覧</h3>
    <div class="method-image">
      <div class="col-6 method-block">
        <%= link_to home_ruby_path do %>
          <p>Rubyメソッド</p>
          <%= image_tag "ruby1.png", class: "method-image1" %>
        <% end %>
      </div>
      <div class="col-6 method-block">
        <%= link_to home_rails_path do %>
          <p>Railsメソッド</p>
          <%= image_tag "rails1.png", class: "method-image1" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
